@model DevAchievements.Application.AchievementsViewModel
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <script type="text/javascript" src="~/Scripts/bootstrap.min.js"></script>
    <link rel="stylesheet" href="~/Content/bootstrap.min.css" />
    <title>DevAchievements</title>
    @using (Html.BeginForm(null, null, FormMethod.Post, new { autocomplete = "off", @class = "row panel-inline panel-default", id = "form-achievements" }))
    {  
        <dl class="col-md-4 panel-body">
            <dd>          
                <label>
                    GitHub
                </label>
            </dd>

            <dt>
                @Html.TextBox("githubUserName")
            </dt>
            <dd>          
                <label>
                    StackOverflow
                </label>
            </dd>

            <dt>
                @Html.TextBox("stackoverflowUserName")
            </dt>
            <dt><input type='submit' id='saveButton' name='saveButton' class='btn btn-orange' value='Refresh' /></dt>   
        </dl>
    }

    @foreach(var issuer in Model.Issuers)
    {
        <div class="alert alert-success">@issuer.Name</div>
    	<ul>            
        @foreach(var achievement in Model.GetAchievementsByIssuer(issuer))
        {
            <li>
                <a href="@achievement.Link">@achievement.Name : <span class="badge">@achievement.Value</span></a>
            </li>
        }
        </ul>
    }
</head>
<body>
</body>
</html>
